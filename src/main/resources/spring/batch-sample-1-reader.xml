<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:task="http://www.springframework.org/schema/task" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	">

	<!-- Spring-Batch 설정 -->
	<import resource="common/spring-base.xml" />

	<!-- JDBC -->
	<import resource="common/jdbc-config.xml" />

	<!-- Batch 설정 -->
	<import resource="common/batch-config.xml" />


	<!-- Batch 설정 -->
	<!-- Job 선언 jobid = job1 -->
	<batch:job id="batch-sample-1-reader" >
		<batch:step id="step1">
			<batch:tasklet>
				<batch:chunk reader="sampleReader" writer="sampleWriter" commit-interval="1"></batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>
</beans>
