   <insert id = "saveInfo"  parameterType="CBillComm">
   INSERT INTO TBLIV_SPLT_PYM  (                    
     BILL_SEQ_NO,
     USE_YYMM,
     PROD_CMPS_ID,  
     SVC_CMPS_ID,
     CHRG_ITM_CD,
     BILL_YYMM,     
     BILL_CYCL,
     BILL_DT,
     SO_ID,         
     GRP_ID,
     PYM_ACNT_ID,
     CUST_ID,
     CTRT_ID,
     PROD_CD,
     SVC_CD,        
     BIZ_CL,
     PROD_GRP,
     SVC_GRP,       
     BILL_MM_TP,
     SALE_TP,
     USG_CNT,       
     USG_AMT,
     ADJ_PRV_BILL_AMT,
     ADJ_AMT,       
     BILL_AMT,
     PAY_DUE_DT,
     SPLT_PYM_TP,   
     CHRG_CTGRY,
     SPLT_CHRG_ITM_CD, 
     ATRT_CORP_ID,  
     ATRT_EMP_ID,
     WON_BILL_AMT, 
     CRNCY_CD,      
     EXRATE,
     EXRATE_APLY_DT,
     REG_DATE
  )   
 VALUES 
 (
    #{billSeqNo},
    #{useYymm},
    #{prodCmpsId},  
    #{svcCmpsId},
    #{chrgItmCd},
    #{billYymm},     
    #{billCycl},
    #{billDt},
    #{soId},         
    #{grpId},
    #{pymAcntId},
    #{custId},
    #{ctrtId},
    #{prodCd},
    #{svcCd},        
    #{bizCl},
